  "generate_remittances_for_all_users": {
    "endpoint": "/api/v1/generate-remittances-for-all-users",
    "method": "POST",
    "description": "Generates remittances for all users based on eligible work and returns a task_id for polling.",
    "request_headers": {
      "Authorization": "Bearer <superuser_token>"
    },
